#!/usr/bin/perl -lw

use strict;

use HTML::TreeBuilder;
use URI;

my ( $url, $pat ) = @ARGV;
$pat = qr/$pat/ if $pat;
$,   = "\n";
print grep {
    $_ = URI->new_abs( @$_[0], $url );
    $_ =~ /$pat/ if $pat
} @{ HTML::TreeBuilder->new_from_url($url)->extract_links('a') } if $url;

__END__

=head1 NAME

lextract - extract links from a given URL

=head1 SYNOPSIS

=over 12

=item B<lextract>

B<url>
[I<regex>]

=back

